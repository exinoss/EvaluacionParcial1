@model IEnumerable<evaluacionparcial1.Models.Artista>

@{
    ViewData["Title"] = "Artistas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Artistas</h1>
    <a asp-action="Create" class="btn btn-primary">Nuevo Artista</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay artistas registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Nacionalidad)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nacionalidad)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.ArtistaId" class="btn btn-sm btn-info">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.ArtistaId" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.ArtistaId" class="btn btn-sm btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
