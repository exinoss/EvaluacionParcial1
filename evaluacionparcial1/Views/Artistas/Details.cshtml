@model evaluacionparcial1.Models.Artista

@{
    ViewData["Title"] = "Detalles del Artista";
}

<h1>Detalles del Artista</h1>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@Model.NombreCompleto</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nacionalidad)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nacionalidad)</dd>
        </dl>

        @if (Model.AlbumArtistas != null && Model.AlbumArtistas.Any())
        {
            <h5 class="mt-4">√Ålbumes</h5>
            <ul class="list-group">
                @foreach (var albumArtista in Model.AlbumArtistas)
                {
                    <li class="list-group-item">
                        <a asp-controller="Albumes" asp-action="Details" asp-route-id="@albumArtista.Album.AlbumId">
                            @albumArtista.Album.Titulo
                        </a>
                        <span class="badge bg-secondary ms-2">@albumArtista.Album.Genero</span>
                        <span class="badge bg-info ms-1">@albumArtista.Album.AnioLanzamiento</span>
                    </li>
                }
            </ul>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ArtistaId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
