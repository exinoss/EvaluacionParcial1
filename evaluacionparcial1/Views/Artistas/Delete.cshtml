@model evaluacionparcial1.Models.Artista

@{
    ViewData["Title"] = "Eliminar Artista";
}

<h1>Eliminar Artista</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">¿Está seguro de eliminar este artista?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nacionalidad)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nacionalidad)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="ArtistaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
