@model IEnumerable<evaluacionparcial1.Models.Album>

@{
    ViewData["Title"] = "Álbumes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Álbumes</h1>
    <a asp-action="Create" class="btn btn-primary">Nuevo Álbum</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay álbumes registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>@Html.DisplayNameFor(model => model.AnioLanzamiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Discografica)</th>
                    <th>Artistas</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.AnioLanzamiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Discografica)</td>
                        <td>
                            @if (item.AlbumArtistas != null && item.AlbumArtistas.Any())
                            {
                                @string.Join(", ", item.AlbumArtistas.Select(aa => aa.Artista.NombreCompleto))
                            }
                            else
                            {
                                <span class="text-muted">Sin artistas</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.AlbumId" class="btn btn-sm btn-info">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.AlbumId" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.AlbumId" class="btn btn-sm btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
